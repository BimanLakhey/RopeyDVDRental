@model IEnumerable<GCW.Models.DVDTitle>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>  
  
<html>  
    <head>  
        <meta name="viewport" content="width=device-width" />  
        <title>Actor DVDs</title>  
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />  
        <script type="text/javascript" src="@Url.Action("~/scripts/jquery-3.3.1.min.js")"></script>  
        <script type="text/javascript" src="@Url.Action("~/scripts/bootstrap.min.js")"></script>  
    </head>  
    <body>  
        <div class="container-fluid py-4">  
            <h4 class="text-center text-uppercase">Actor DVDs</h4>   
            <br />
            <form asp-controller="ActorDVDs" asp-action="Index" role="form"> 
                 <div style="display: flex; justify-content: space-between; width: 300px;">
                    <input style="width: 175px;" type="text" class="form-control" placeholder="Actor last name" name="lastName"/>
                    <input style="width: 100px;" type="submit" class="btn btn-primary" value="Search" name="btnSubmit"/>
                </div>
            </form>
             <br />
            <table class="table table-striped table-bordered box-shadow shadow-lg">
                <thead style="background-color: darkcyan;" class="text-white">
                    <tr>
                        <th>
                            DVD Title
                        </th>
                        <th>
                            Date released
                        </th>
                        <th>
                            Standard charge
                        </th>
                        <th>
                            Penalty charge
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) 
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateReleased)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StandardCharge)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PenaltyCharge)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>  
    </body>  
</html>  
