@model GCW.Models.DVDTitle

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>DVD Title</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            DVD title
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Date released
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateReleased)
        </dd>
        <dt class = "col-sm-2">
            Standard charge
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StandardCharge)
        </dd>
        <dt class = "col-sm-2">
            penalty charge
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PenaltyCharge)
        </dd>
        <dt class = "col-sm-2">
            Studio
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Studio.StudioNumber)
        </dd>
        <dt class = "col-sm-2">
            Producer
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Producer.ProducerNumber)
        </dd>
        <dt class = "col-sm-2">
            DVD category
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DVDCategory.CategoryNumber)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DVDNumber" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
