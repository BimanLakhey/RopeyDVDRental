@model IEnumerable<GCW.Models.DVDTitle>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>  
  
<html>  
    <head>  
        <meta name="viewport" content="width=device-width" />  
        <title>Index</title>  
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />  
        <script type="text/javascript" src="@Url.Action("~/scripts/jquery-3.3.1.min.js")"></script>  
        <script type="text/javascript" src="@Url.Action("~/scripts/bootstrap.min.js")"></script>  
    </head>  
    <body>  
        <div class="container-fluid py-4">  
            <h4 class="text-center text-uppercase">DVD Loans</h4>   
            <br />
            <p>
                <a asp-action="Create"><input type="button" value="Create New" class="btn bg-success text-white box-shadow shadow-lg"></a>
            </p>
            <table class="table table-striped table-bordered box-shadow shadow-lg">
                <thead style="background-color: darkcyan;" class="text-white">
                    <tr>
                        <th>
                            DVD title
                        </th>
                        <th>
                            Date released
                        </th>
                        <th>
                            Standard charge
                        </th>
                        <th>
                            Penalty charge
                        </th>
                        <th>
                            Studio
                        </th>
                        <th>
                            Producer
                        </th>
                        <th>
                            DVD category
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) 
                    {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateReleased)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StandardCharge)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PenaltyCharge)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Studio.StudioNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Producer.ProducerNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DVDCategory.CategoryNumber)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.DVDNumber">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.DVDNumber">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.DVDNumber">Delete</a>
                                </td>
                            </tr>
                    }
                </tbody>
            </table>
         </div>  
    </body>  
</html>
