@model IEnumerable<GCW.Models.DVDCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Category description
            </th>
            <th>
                Age restriction
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgeRestriction)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoryNumber">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategoryNumber">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoryNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
