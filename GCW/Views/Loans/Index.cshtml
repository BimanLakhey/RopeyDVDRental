@model IEnumerable<GCW.Models.Loan>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>  
  
<html>  
    <head>  
        <meta name="viewport" content="width=device-width" />  
        <title>Index</title>  
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />  
        <script type="text/javascript" src="@Url.Action("~/scripts/jquery-3.3.1.min.js")"></script>  
        <script type="text/javascript" src="@Url.Action("~/scripts/bootstrap.min.js")"></script>  
    </head>  
    <body>  
        <div class="container-fluid py-4">  
            <h4 class="text-center text-uppercase">DVD Loans</h4>   
            <br />
            <p>
                <a asp-action="Create"><input type="button" value="Create New" class="btn bg-success text-white box-shadow shadow-lg"></a>
            </p>
            <br />
            <table class="table table-striped table-bordered box-shadow shadow-lg">  
                <thead style="background-color: darkcyan;" class="text-white"> 
                    <tr>
                        <th>
                            Date out
                        </th>
                        <th>
                            Date due
                        </th>
                        <th>
                            Date returned
                        </th>
                        <th>
                            Loan type number
                        </th>
                        <th>
                            DVD copy number
                        </th>
                        <th>
                            Member number
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) 
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateOut)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateDue)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateReturned)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LoanType.LoanTypeNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DVDCopy.CopyNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Member.MemberNumber)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.LoanNumber"><input type="button" value="Edit" class="btn bg-warning text-white"></a>
                                <a asp-action="Details" asp-route-id="@item.LoanNumber"><input type="button" value="Details" class="btn bg-secondary text-white"></a>
                                <a asp-action="Delete" asp-route-id="@item.LoanNumber"><input type="button" value="Delete" class="btn bg-danger text-white"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
         </div>  
    </body>  
</html>
