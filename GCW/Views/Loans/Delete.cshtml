@model GCW.Models.Loan

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Loan</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Date out
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOut)
        </dd>
        <dt class = "col-sm-2">
            Date due
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateDue)
        </dd>
        <dt class = "col-sm-2">
            Date returned
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateReturned)
        </dd>
        <dt class = "col-sm-2">
            Loan type
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LoanType.LoanTypeNumber)
        </dd>
        <dt class = "col-sm-2">
            DVD copy
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DVDCopy.CopyNumber)
        </dd>
        <dt class = "col-sm-2">
            Member number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Member.MemberNumber)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="LoanNumber" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index"><input type="button" value="Back" class="btn bg-primary text-white"></a>
    </form>
</div>
