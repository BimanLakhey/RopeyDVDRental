@model IEnumerable<GCW.Models.InactiveMembersViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>  
  
<html>  
    <head>  
        <meta name="viewport" content="width=device-width" />  
        <title>Index</title>  
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />  
        <script type="text/javascript" src="@Url.Action("~/scripts/jquery-3.3.1.min.js")"></script>  
        <script type="text/javascript" src="@Url.Action("~/scripts/bootstrap.min.js")"></script>  
    </head>  
    <body>  
        <div class="container-fluid py-4">  
            <h4 class="text-center text-uppercase">Inactive members</h4>   
            <br />
            <table class="table table-striped table-bordered box-shadow shadow-lg">  
                <thead style="background-color: darkcyan;" class="text-white">  
                    <tr>
                        <th>Member first name</th>  
                        <th>Member last name</th>
                        <th>Member address</th>
                        <th>DVD title</th>
                        <th>Date out</th>
                    </tr>  
                </thead>  
                <tbody>  
                    @foreach (var item in Model)  
                    {  
                        <tr>  
                            <td>@item.member.MemberFirstName</td>  
                            <td>@item.member.MemberLastName</td>  
                            <td>@item.member.MemberAddress</td>  
                            <td>@item.dvdTitle.Title</td> 
                            <td>@item.loan.DateOut</td> 
                        </tr>  
                    }  
                
                </tbody>  
            </table>  
        </div>  
    </body>  
</html>  

