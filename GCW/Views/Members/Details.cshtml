@model GCW.Models.Member

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Member</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Last name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MemberLastName)
        </dd>
        <dt class = "col-sm-2">
            First name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MemberFirstName)
        </dd>
        <dt class = "col-sm-2">
            Address
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MemberAddress)
        </dd>
        <dt class = "col-sm-2">
            Date of birth
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MemberDateOfBirth)
        </dd>
        <dt class = "col-sm-2">
            Membership category
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MembershipCategory.MembershipCategoryNumber)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.MemberNumber">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
