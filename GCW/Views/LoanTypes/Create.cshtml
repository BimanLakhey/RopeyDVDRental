@model GCW.Models.LoanType

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Loan Type</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoanTypeName" class="control-label">Loan type</label>
                <input asp-for="LoanTypeName" class="form-control" />
                <span asp-validation-for="LoanTypeName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="LoanDuration" class="control-label">Loan duration</label>
                <input asp-for="LoanDuration" class="form-control" />
                <span asp-validation-for="LoanDuration" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
