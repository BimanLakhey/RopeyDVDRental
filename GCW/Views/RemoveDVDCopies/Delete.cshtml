@model GCW.Models.DVDCopy

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>DVD Copy</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            DVD title
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DVDTitle.DVDNumber)
        </dd>
        <dt class = "col-sm-2">
            Date purchased
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DatePurchased)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CopyNumber" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index"><input type="button" value="Back" class="btn bg-primary text-white"></a>
    </form>
</div>
