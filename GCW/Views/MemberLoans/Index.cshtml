@model IEnumerable<GCW.Models.MemberLoansViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>  
  
<html>  
    <head>  
        <meta name="viewport" content="width=device-width" />  
        <title>Index</title>  
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />  
        <script type="text/javascript" src="@Url.Action("~/scripts/jquery-3.3.1.min.js")"></script>  
        <script type="text/javascript" src="@Url.Action("~/scripts/bootstrap.min.js")"></script>  
    </head>  
    <body>  
        <div class="container-fluid py-4">  
            <h4 class="text-center text-uppercase">Member DVDs</h4>   
            <br />
            <table class="table table-striped table-bordered box-shadow shadow-lg">  
                <thead style="background-color: darkcyan;" class="text-white">  
                    <tr>
                        <th>Member numebr</th>  
                        <th>Member first name</th>  
                        <th>Member last name</th>
                        <th>Member address</th>
                        <th>Member date of birth</th>
                        <th>Membership category description</th>
                        <th>Total loans granted</th>
                        <th>Total loans taken</th>
                        <th>Loan status</th>

                    </tr>  
                </thead>  
                <tbody>  
                    @foreach (var item in Model)  
                    {  
                        <tr>  
                            <td>@item.MemberNumber</td>
                            <td>@item.MemberFirstName</td>  
                            <td>@item.MemberLastName</td>  
                            <td>@item.MemberAddress</td>  
                            <td>@item.MemberDateOfBirth</td>  
                            <td>@item.MembershipCategoryDesc</td>  
                            <td>@item.CategoryTotalLoans</td> 
                            <td>@item.LoanCount</td> 
                            <td>@item.LoanStatus</td>
                        </tr>  
                    }  
                
                </tbody>  
            </table>  
        </div>  
    </body>  
</html>  
