@model IEnumerable<GCW.Models.MembershipCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Membership category description
            </th>
            <th>
                Total loans
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MembershipCategoryDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MembershipCategoryTotalLoans)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MembershipCategoryNumber">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MembershipCategoryNumber">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MembershipCategoryNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
