@model IEnumerable<GCW.Models.CastMember>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var results = (IEnumerable<DVDCopiesOnShelves>)ViewData["results"];
}

<!DOCTYPE html>  
  
<html>  
    <head>  
        <meta name="viewport" content="width=device-width" />  
        <title>Index</title>  
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />  
        <script type="text/javascript" src="@Url.Action("~/scripts/jquery-3.3.1.min.js")"></script>  
        <script type="text/javascript" src="@Url.Action("~/scripts/bootstrap.min.js")"></script>  
    </head>  
    <body>  
        <div class="container-fluid py-4">  
            <h4 class="text-center text-uppercase">Available DVD Copies</h4>   
            <br />
            <form asp-controller="ActorDVDCopies" asp-action="Index" role="form"> 
                <div style="display: flex; justify-content: space-between; width: 300px;">
                    <input style="width: 175px;" type="text" class="form-control" placeholder="Actor's surname" name="lastName"/>
                    <input style="width: 100px;" type="submit" class="btn btn-primary" value="Search" name="btnSubmit"/>
                </div>
            </form>
             <br />
            <table class="table table-striped table-bordered box-shadow shadow-lg">
                <thead style="background-color: darkcyan;" class="text-white">
                    <tr>
                        <th>
                           DVD Number 
                        </th>
                        <th>
                            DVD Count
                        </th>
                        <th>
                            Title 
                        </th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in results) {
                    <tr>
                        <th>
                            @Html.DisplayFor(modelItem=> item.DVDNumber)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem=> item.DVD_Count) available
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem=> item.Title)
                        </th>
                    </tr>
            }
                </tbody>
            </table>
         </div>  
    </body>  
</html>  