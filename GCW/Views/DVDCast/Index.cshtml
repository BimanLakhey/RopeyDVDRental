@model IEnumerable<GCW.Models.DVDCastViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>  
  
<html>  
<head>  
    <meta name="viewport" content="width=device-width" />  
    <title>Index</title>  
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />  
    <script type="text/javascript" src="@Url.Action("~/scripts/jquery-3.3.1.min.js")"></script>  
    <script type="text/javascript" src="@Url.Action("~/scripts/bootstrap.min.js")"></script>  
</head>  
<body>  
    <div class="container-fluid py-4">  
        <h4 class="text-center text-uppercase">DVD Cast</h4>   
        <br />
        <table class="table table-striped table-bordered box-shadow shadow-lg">  
            <thead style="background-color: darkcyan;" class="text-white">  
                <tr>
                    <th>DVD number</th>
                    <th>DVD title</th>  
                    <th>Date released</th>  
                    <th>Producer name</th>  
                    <th>Studio name</th>  
                    <th>Actor first name</th>
                    <th>Actor last name</th>
                </tr>  
            </thead>  
            <tbody>  
                @foreach (var item in Model)  
                {  
                    <tr>  
                        <td>@item.dvdTitle.DVDNumber</td>  
                        <td>@item.dvdTitle.Title</td>  
                        <td>@item.dvdTitle.DateReleased</td>  
                        <td>@item.producer.ProducerName</td>  
                        <td>@item.studio.StudioName</td>  
                        <td>@item.actor.ActorFirstName</td>  
                        <td>@item.actor.ActorSurname</td>  
                    </tr>  
                }  
            </tbody>  
        </table>  
    </div>  
</body>  
<script type="text/javascript">  
    function SelectedIndexChanged() {  
        //Form post  
   }  
</script>  
</html>  




